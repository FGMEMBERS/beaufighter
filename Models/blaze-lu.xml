<?xml version="1.0"?>

<PropertyList>
 <path>blaze.ac</path>

 <animation>
   <type>select</type>
   <object-name>noshadow.blaze2</object-name>
     <condition>
       <equals>
         <property>sim/model/beaufighter/lighting/flash-lu/state</property>
         <value>true</value>
       </equals>
     </condition>
 </animation>
 <animation>
   <type>material</type>
     <object-name>noshadow.blaze2</object-name>
     <emission>
       <red>0.9</red>
       <green>0.9</green>
       <blue>0.6</blue>
     </emission>
 </animation>

</PropertyList>
