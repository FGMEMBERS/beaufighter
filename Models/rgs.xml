<?xml version="1.0"?>
  <PropertyList> 
    <path>rgs.ac</path>
    <animation> 
      <type>blend</type>
      <object-name>glass</object-name>
      <offset>0.75</offset>
    </animation>
    <animation> 
      <type>select</type>
      <object-name>disk</object-name>
      <condition> 
        <and> 
          <equals> 
            <property>/sim/current-view/view-number</property>
            <value>0</value>
          </equals>
          <equals> 
            <property>/controls/switches/gun-sight-stow</property>
            <value>0</value>
          </equals>
          <property>/controls/switches/gun-sight-main</property>
        </and>
      </condition>
    </animation>
    <animation> 
      <type>material</type>
      <object-name>disk</object-name>
      <transparency> 
        <alpha-prop>controls/switches/gun-sight-dimmer</alpha-prop>
        <factor>-1</factor>
        <offset>1</offset>
      </transparency>
    </animation>
	<animation> 
      <type>material</type>
      <object-name>front</object-name>
      <emission> 
        <factor-prop>/controls/lighting/panel-norm</factor-prop>
        <red>0.25</red>
        <green>0.020</green>
        <blue>0.020</blue>
      </emission>
    </animation>
    <animation> 
      <type>material</type>
      <object-name>disk</object-name>
      <emission> 
        <factor-prop>/controls/lighting/panel-norm</factor-prop>
        <red>0.75</red>
        <green>0.25</green>
        <blue>0.25</blue>
      </emission>
    </animation>
	<animation> 
      <type>rotate</type>
      <object-name>gunsight_main</object-name>
      <property>/controls/switches/gun-sight-stow</property>
      <factor>80</factor>
      <center> 
        <x-m>-0.0361545</x-m>
        <y-m>0.102209</y-m>
        <z-m>-0.0712799</z-m>
      </center> 
      <axis> 
        <x>0</x>
        <y>0</y>
        <z>1</z>
      </axis> 
    </animation>
  </PropertyList>
