<?xml version="1.0"?>
  <!-- auto direction finder -->
  <PropertyList> 
    <path>beam_approach.ac</path>
    

  <animation>
    <type>select</type>
    <object-name>needle</object-name>
    <condition>
     <less-than>
      <property>instrumentation/adf/indicated-bearing-deg</property>
      <value>181</value>
     </less-than>
    </condition>
   </animation>
   <animation>
    <type>select</type>
    <object-name>needle1</object-name>
    <condition>
     <greater-than>
      <property>instrumentation/adf/indicated-bearing-deg</property>
      <value>180</value>
     </greater-than>
    </condition>
   </animation>
   <animation> 
      <type>rotate</type>
      <object-name>needle</object-name>
      <property>instrumentation/adf/indicated-bearing-deg</property>
      <interpolation> 
        <entry>
          <ind>0</ind>
          <dep>0</dep>
        </entry>
        <entry>
          <ind>90</ind>
          <dep>22.5</dep>
        </entry>
        <entry>
          <ind>178</ind>
          <dep>45</dep>
        </entry>
        <entry>
          <ind>180</ind>
          <dep>0</dep>
        </entry>
      </interpolation>
      <center> 
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>-0.018</z-m>
      </center>
      <axis> 
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>
    <animation> 
      <type>rotate</type>
      <object-name>needle1</object-name>
      <property>instrumentation/adf/indicated-bearing-deg</property>
      <interpolation>
       <entry>
          <ind>180</ind>
          <dep>0</dep>
        </entry>
        <entry>
          <ind>182</ind>
          <dep>45</dep>
        </entry>
        <entry>
          <ind>270</ind>
          <dep>22.5</dep>
        </entry>
        <entry>
          <ind>360</ind>
          <dep>0</dep>
        </entry>
      </interpolation>
      <center> 
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>-0.018</z-m>
      </center>
      <axis> 
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>
    
	<animation> 
      <type>material</type>
      <emission> 
        <factor-prop>/controls/lighting/panel-norm</factor-prop>
        <red>0.75</red>
        <green>0.25</green>
        <blue>0.25</blue>
      </emission>
    </animation>
    
	<!-- *** LoD for the whole model *** -->
    <animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
    </animation>
  </PropertyList>
