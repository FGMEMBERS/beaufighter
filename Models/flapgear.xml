  <type>pick</type>
  <object-name>flapknob</object-name>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>/controls/flight/flaps</property>
    <step>0.013</step>
    <min>0</min>
    <max>1</max>
    <wrap>0</wrap>
    </binding>
  </action>
