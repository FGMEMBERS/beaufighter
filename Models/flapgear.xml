<PropertyList>

 <path>flapgear.ac</path>
  
 <animation>
  <type>rotate</type>
  <object-name>gearknob</object-name>
  <object-name>gearlever</object-name>
  <property>/controls/gear/gear-down</property>
  <interpolation>
   <entry>
    <ind>0.0</ind>
    <dep>-60</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>0</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
 </animation>
