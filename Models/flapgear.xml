<animation>
  <type>translate</type>
  <object-name>indicator</object-name>
  <property>/controls/flight/flaps</property>
  <interpolation>
   <entry>
    <ind>0.0</ind>
    <dep>0.0</dep>
   </entry>
   <entry>
    <ind>1.00</ind>
    <dep>0.097</dep>
   </entry>
  </interpolation>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>-0.75</z>
  </axis>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>gearknob</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-toggle</command>
      <property>/controls/gear/gear-down</property>
    </binding>
  </action>
</animation>
